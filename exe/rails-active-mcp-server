#!/usr/bin/env ruby
# frozen_string_literal: true

# Load the gem and CLI
begin
  require_relative '../lib/rails_active_mcp'
  require_relative '../lib/rails_active_mcp/cli'
rescue LoadError => e
  puts "FATAL: Failed to load rails_active_mcp gem: #{e.message}"
  exit(1)
end

# Start the Thor CLI
RailsActiveMcp::CLI.start(ARGV)
